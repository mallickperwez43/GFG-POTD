
class Solution {
  public:
    // Function to find maximum number of consecutive steps
    // to gain an increase in altitude with each step.
    int maxStep(vector<int>& arr) {
        // Your code here
        int maxi = INT_MIN;
        int count = 0;
        
        for(int i = 0; i < arr.size() - 1; i++){
            if(arr[i] < arr[i + 1]){
                count++;
            }
            else{
                maxi = max(maxi, count);
                count = 0;
            }
        }
        
        maxi = max(maxi, count); // check for last iteration
        
        return maxi;
    }
};
